<h2 class="page-header">Register</h2>
{{#if user}}
        <div class="alert alert-danger">Username has taken already try new</div> 
{{/if}}
{{#if mail}}
        <div class="alert alert-danger">Email has taken already try new</div> 
{{/if}} 
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>UserName*</label>
    <input type="text" class="form-control" placeholder="Userame" name="username">
  </div>
  <div class="form-group">
    <label>Contact No.</label>
    <input type="text" class="form-control" placeholder="College" name="contact">
  </div>
   <div class="form-group">
    <label>Email*</label>
    <input type="email" class="form-control" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Contact 1</label>
    <input type="number" class="form-control" placeholder="Registered Contact 1" name="contact1">
  </div>
  <div class="form-group">
    <label>Contact 2</label>
    <input type="number" class="form-control" placeholder="Registered Contact 2" name="contact2">
  </div>
  <div class="form-group">
    <label>Contact 3</label>
    <input type="number" class="form-control" placeholder="Registered Contact 3" name="contact3">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>